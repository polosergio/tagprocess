<div class="container-fluid">
	<div class="row">
		<div id="invoiceList">
			{{#if admin}}
			<div class="text-right">
				<button class="btn btn-default toggleForm">
					<span class="glyphicon glyphicon-plus-sign" style="color: green;"></span> Create Invoice
				</button>
			</div><br>
			{{/if}}
			<div class="table-responsive">
				<table class="table table-bordered table-condensed table-hover table-striped">
					<thead>
						<tr>
							<th>Charges</th>
							<th>Date</th>
							<th>Options</th>
						</tr>
					</thead>
					<tbody>
						{{#if invoices.length }}
							{{#each invoices}}
								<tr>
									<td>{{ charges }}</td>
									<td>{{ invoice_date }}</td>
									<td class="text-right">
										<a href="/tagproc/invoice.php?submit=View&id={{ jobnumber }}" target="_blank">
											<span title="View Invoice" class="glyphicon glyphicon-search"></span>
										</a>
										{{#if ../admin }}
										<a href="/tagproc/invoice.php?submit=Edit&id={{ jobnumber }}" target="_blank">
											<span title="Edit Invoice" class="glyphicon glyphicon-pencil" style="color: goldenrod;"></span>
										</a>
										{{/if}}
									</td>
								</tr>
							{{/each}}
						{{else}}
						<tr>
							<td colspan="3">No invoices available</td>
						</tr>
						{{/if}}
					</tbody>
				</table>
			</div>
		</div>
		<form class="form-horizontal hide" id="invoiceForm">
			<a href="#" class="toggleForm">
				<span class="glyphicon glyphicon-arrow-left"></span>
			</a>
			<div class="form-group">
				<label for="amount" class="col-md-2 control-label">Amount</label>
				<div class="col-md-10">
					<input type="number" id="amount" name="amount" class="form-control" required>
				</div>
			</div>
			<div class="form-group">
				<label for="method" class="col-md-2 control-label">Payment Method</label>
				<div class="col-md-10">
					<select id="method" name="method" class="form-control" required>
						<option value="">Please select one...</option>
						<option value="check">Check</option>
						<option value="credit">Credit card</option>
						<option value="cash">Cash</option>
					</select>
				</div>	
			</div>
			<div class="form-group hide">
				<label for="check" class="col-md-2 control-label">Check Number</label>
				<div class="col-md-10">
					<input type="number" id="check" name="check" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="name" class="col-md-2 control-label">Name</label>
				<div class="col-md-10">
					<select id="name" name="name" class="form-control" required>
						<option value="">Please select one...</option>
						<option value="SUMMON">SUMMON</option>
						<option value="SUBPOENA">SUBPOENA</option>
						<option value="MANUAL INVOICE">MANUAL INVOICE</option>
						<option value="COURIER">COURIER</option>
						<option value="SKIP TRACE">SKIP TRACE</option>
						<option value="STAKEOUT">STAKEOUT</option>
						<option value="DEFAULT">DEFAULT</option>
					</select>
				</div>	
			</div>
			<div class="form-group">
				<label for="description" class="col-md-2 control-label">Description</label>
				<div class="col-md-10">
					<textarea id="description" name="description" class="form-control" required></textarea>
				</div>
			</div>
			<input type="hidden" name="invoicejob" value="{{ jobnumber }}">
			<div class="alert alert-danger hide col-sm-offset-2 col-sm-10"></div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-primary">Generate</button>
				</div>
			</div>
		</form>
	</div>
</div>
