<form class="form-horizontal" id="returnOfServiceForm" method="GET" action="/tagproc/returnofservice.php" target="_blank">
 	<div class="form-group">
        <label for="comment" class="col-md-2 control-label">Type</label>
        <div class="col-md-10">
			<select id="returntype" name="returntype" class="form-control" required>
				<option value="">Select one...</option>
				<option value="regular">Regular</option>
				<option value="nonservice">Non-Service</option>
				<option value="eviction">Eviction</option>
				<option value="corporation">Corporation</option>
				<option value="sendaway">Send Away</option>
				<option value="authorized">Authorized</option>
			</select>
        </div>
    </div>
   <div class="form-group">
        <label for="notary" class="col-md-2 control-label">Notary Seal</label>
        <div class="col-md-10">
			<div class="checkbox">
				<input type="checkbox" id="notary" name="notary" >
			</div>
		</div>
    </div>
	<h5>Select Comments</h5>
	<div class="form-group">
        <div class="col-md-2">
			<div class="checkbox pull-right">
				<input type="checkbox" name="commentid[]" value="original" >
			</div>
		</div>
        <label for="notary" class="col-md-10 control-label alignLeft">{{ serve.comments }} - {{ serve.timestamp }}</label>
	</div>
	{{#each comments}}
	<div class="form-group">
		<div class="col-md-2">
			<div class="checkbox pull-right">
				<input type="checkbox" name="commentid[]" value="{{ id }}">
			</div>
		</div>
		<label class="col-md-10 control-label alignLeft">{{ comment }} - {{ date }}</label>
	</div>
	{{/each}}
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
			<input type="hidden" name="jobnumber" value="{{ id }}">
            <button type="submit" class="btn btn-primary">Generate</button>
        </div>
    </div>
</form>
