<div class="container-fluid">
	<div class="row">
		<div class="col-md-2 sidebar"></div>
		<div class="col-md-10">
			<form class="form-horizontal" data-url="/tagproc/api/server">
				<div class="form-group">
					<label for="server_fname" class="col-sm-2 control-label">First Name</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="server_fname" name="server_fname" placeholder="Server First Name" required>
					</div>
				</div>
				<div class="form-group">
					<label for="server_lname" class="col-sm-2 control-label">Last Name</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="server_lname" name="server_lname" placeholder="Server Last Name" required>
					</div>
				</div>
				<div class="form-group">
					<label for="server_type" class="col-sm-2 control-label">Server Type</label>
					<div class="col-sm-10">
						<select type="text" class="form-control" id="server_type" name="server_type" data-field="" required>
							<option value="">Please select one...</option>
							<option value="Certified Process Server">Certified Process Server</option>
							<option value="Special Process Server">Special Process Server</option>
							<option value="Court Officer">Court Officer</option>
						</select>
					</div>
				</div>
				<div class="form-group">
					<label for="server_id" class="col-sm-2 control-label">Server ID #</label>
					<div class="col-sm-10">
						<input type="tel" class="form-control" id="server_id" name="server_id" placeholder="Server's ID #" required>
					</div>
				</div>
				<div class="form-group">
					<label for="server_county" class="col-sm-2 control-label">County</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="server_county" name="server_county" placeholder="County">
					</div>
				</div>
				<div class="form-group">
					<label for="server_phone" class="col-sm-2 control-label">Phone #</label>
					<div class="col-sm-10">
						<input type="tel" class="form-control" id="server_phone" name="server_phone" placeholder="Phone #">
					</div>
				</div>
				<div class="form-group">
					<label for="server_address" class="col-sm-2 control-label">Address</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="server_address" name="server_address" placeholder="Server's Address" required>
					</div>
				</div>
				<div class="alert alert-danger hide col-sm-offset-2 col-sm-10"></div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-default btn-block">Submit</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
