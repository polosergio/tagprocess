<form class="form-horizontal" id="serviceForm">
    <div class="form-group">
        <label for="comment" class="col-md-2 control-label">Date & Time</label>
        <div class="col-md-10">
            <input type="datetime-local" id="servicedate" name="servicedate" class="form-control" required>
        </div>
    </div>
    <div class="form-group">
        <label for="comment" class="col-md-2 control-label">Type of Service</label>
        <div class="col-md-10">
            <select id="method" name="method" class="form-control" required>
                <option value="Corporate">Corporate</option>
				<option value="Corp-registered agent">Corp-registered agent</option>
				<option value="Individual/Personal">Individual/Personal</option>
				<option value="Non-serve comments">Non-serve comments</option>
				<option value="Non-serve unknown">Non-serve unknown</option>
				<option value="Non-serve diligent">Non-serve diligent</option>
				<option value="Posted commercial 2 attempts">Posted commercial 2 attempts</option>
				<option value="Posted residential 2 attemps">Posted residential 2 attemps</option>
				<option value="Secretary of state">Secretary of state</option>
				<option value="Substitute residential">Substitute residential</option>
				<option value="Substitute spouse">Substitute spouse</option>
				<option value="(Substitute)">(Substitute)</option>
				<option value="Authorized">Authorized</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="comment" class="col-md-2 control-label">Detailed Service Info</label>
        <div class="col-md-10">
            <textarea id="detailedinfo" name="detailedinfo" class="form-control" required></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="comment" class="col-md-2 control-label">Service Address</label>
        <div class="col-md-10">
            <input type="text" id="serviceaddress" name="serviceaddress" class="form-control" required>
        </div>
    </div>
    <div class="alert alert-danger hide col-sm-offset-2 col-sm-10"></div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>