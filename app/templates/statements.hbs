<div class="container-fluid">
	<div class="row">
		<div class="col-md-2 sidebar"></div>
		<div class="col-md-10">
			<div class="row">
				<div class="table-responsive">
					<table class="table table-bordered table-condensed table-hover table-striped">
						<thead>
							<tr>
								<th class="col-xs-6 col-sm-6 col-md-8">Client Name</th>
								<th class="col-xs-6 col-sm-6 col-md-4">Options</th>
							</tr>
						</thead>
						<tbody>
						{{#if clients.length}}
							{{#each clients}}
							<tr>
								<td>{{ accountname }}</td>
								<td>
									<form class="form-inline" role="form" target="_blank" method="GET" action="/tagproc/clientstatement.php">
										<div class="form-group">
											<label class="sr-only control-label">Time Frame</label>
											<select class="form-control" style="width: 200px;" name="time" data-value="value" data-search="text" data-label="text" required>
												<option value="">Please select one...</option>
												<option value="current">Current</option>
												<option value="past_thirty">Past 30</option>
												<option value="past_sixty">Past 60</option>
												<option value="custom">Custom</option>
											</select>
										</div>
										<div class="form-group hide">
											<label class="sr-only control-label">Custom Date</label>
											<input type="month" name="custom" class="form-control" placeholder="Month - Year">
										</div>
										<input type="hidden" name="client" value="{{ accountname }}">
										<button type="submit" class="btn btn-default pull-right">
											<span class="glyphicon glyphicon-search"></span>
										</button>
									</form>
								</td>
							</tr>
							{{/each}}
						{{ else }}
							<tr>
								<td colspan="2">No Clients Available</td>
							</tr>
						{{/if}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
	
