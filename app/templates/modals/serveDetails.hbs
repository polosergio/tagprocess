<div class="container-fluid">
	<a href="#" class="openList"><span class="glyphicon glyphicon-arrow-left"></span></a>
{{#if comment}}
	<div class="row">
		<div class="table-responsive">
			<table class="table table-bordered table-condensed table-hover table-striped">
				<thead>
					<tr>
						<th>Date</th>
						<th>Comment</th>
						<th>Latitude</th>
						<th>Longitude</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{{date}}</td>
						<td>{{comment}}</td>
						<td>{{latitude}}</td>
						<td>{{longitude}}</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<img src="{{street}}" class="img-responsive col-md-6">
		<img src="{{satellite}}" class="img-responsive col-md-6">
	</div>
	<div class="row">
		<img src="/tagproc/images/{{image}}" class="img-responsive col-md-12">
	</div>
{{else}}
	<div class="row">
		<div class="col-md-6">
			<div class="table-responsive">
				<table class="table table-bordered table-condensed table-hover table-striped">
					<tbody>
						<tr>
							<th>Date</th>
							<td>{{timestamp}}</td>
						</tr>
						<tr>
							<th>GPS Location</th>
							<td>{{latitude}}, {{longitude}}</td>
						</tr>
						<tr>
							<th>Served On</th>
							<td>{{served_person}}</td>
						</tr>
						<tr>
							<th>Gender</th>
							<td>{{gender}}</td>
						</tr>	
						<tr>
							<th>Age</th>
							<td>{{age}}</td>
						</tr>
						<tr>
							<th>Race</th>
							<td>{{race}}</td>
						</tr>
						<tr>
							<th>Height</th>
							<td>{{height}}</td>
						</tr>
						<tr>
							<th>Weight</th>
							<td>{{weight}}</td>
						</tr>
						<tr>
							<th>Hair</th>
							<td>{{hair}}</td>
						</tr>
						<tr>
							<th>Glasses</th>
							<td>{{glasses}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>	
		<img src="/tagproc/images/{{image}}" class="img-responsive col-md-6">
	</div>
	<div class="row">
		<img src="{{street}}" class="img-responsive col-md-6">
		<img src="{{satellite}}" class="img-responsive col-md-6">
	</div>
{{/if}}
</div>

