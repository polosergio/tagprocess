<div class="container-fluid">
	<div class="row">
		<div class="table-responsive">
			<table class="table table-bordered table-condensed table-hover table-striped">
				<thead>
					<tr>
						<th>Date</th>
						<th>Image Name</th>
						<th>Type</th>
						<th>Options</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{{serve.timestamp}}</td>
						<td>{{serve.image}}</td>
						<td>Serve</td>
						<td class="text-right">
							<a href="#" class="openDetails" data-type="serve"><span class="glyphicon glyphicon-search"></span></a>
						</td>
					</tr>
					{{#each comments}}
					<tr>
						<td>{{date}}</td>
						<td>{{image}}</td>
						<td>Comment</td>
						<td class="text-right">
							<a href="#" class="openDetails" data-type="comment" data-id="{{id}}"><span class="glyphicon glyphicon-search"></span></a>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>	
	</div>
</div>
